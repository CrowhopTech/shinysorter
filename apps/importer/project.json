{
  "name": "importer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/importer/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "inputs": [
        "{projectRoot}/src/**"
      ],
      "options": {
        "outputPath": "dist/apps/importer",
        "format": [
          "cjs"
        ],
        "main": "apps/importer/src/main.ts",
        "tsConfig": "apps/importer/tsconfig.app.json",
        "assets": [
          "apps/importer/src/assets"
        ]
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "envFile": "apps/importer/.env.default",
        "commands": [
          "docker build -f apps/importer/Dockerfile . -t $IMPORTER_DOCKER_IMG:$IMPORTER_DOCKER_TAG"
        ]
      },
      "configurations": {
        "production": {
          "envFile": "apps/importer/.env.production"
        }
      }
    },
    "docker-push": {
      "dependsOn": [
        "docker-build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "envFile": "apps/importer/.env.default",
        "commands": [
          "docker push $IMPORTER_DOCKER_IMG:$IMPORTER_DOCKER_TAG"
        ]
      },
      "configurations": {
        "production": {
          "envFile": "apps/importer/.env.production"
        }
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "importer:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "importer:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/importer/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/importer/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}