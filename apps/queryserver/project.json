{
  "name": "queryserver",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/queryserver/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/queryserver",
        "format": [
          "cjs"
        ],
        "main": "apps/queryserver/src/main.ts",
        "tsConfig": "apps/queryserver/tsconfig.app.json",
        "assets": [
          "apps/queryserver/src/assets"
        ]
      }
    },
    "docker-build": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f apps/queryserver/Dockerfile . -t $DOCKER_IMG:$DOCKER_TAG"
        ]
      }
    },
    "docker-push": {
      "dependsOn": [
        "^docker-build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker push $DOCKER_IMG:$DOCKER_TAG"
        ]
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "options": {
        "buildTarget": "queryserver:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "queryserver:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/queryserver/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/queryserver/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}